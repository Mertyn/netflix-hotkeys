{
    "manifest_version": 2,
    "name": "Netflix Hotkeys (Beta)",
    "version": "0.10.0",
    "description": "Adds keyboard shortcuts to netflix similar to YouTube.",

    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },

    "permissions": [
        "tabs"
    ],

    "browser_action": {
        "default_icon": "icons/icon-32-off.png",
        "default_title": "Netflix Hotkeys - Disabled",
        "default_popup": "html/popup.html"
    },

    "background": {
        "scripts": ["js/background.js"]
    },

    "content_scripts": [
        {
            "js": ["js/arrive.min.js", "js/content.js"],
            "css": ["css/ui.css"],
            "matches": ["*://*.netflix.com/browse*"],
            "run_at": "document_end"
        }
    ],

    "web_accessible_resources": ["html/ui.html", "js/arrive.min.js", "js/mousetrap.min.js", "js/ui.js", "js/player.js", "js/init.js", "js/test.js"]
}